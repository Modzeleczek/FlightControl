<Window x:Class="FlightControl.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightControl"
        mc:Ignorable="d"
        Title="SimulationWindow" Height="720" Width="1280"
        Background="Black">
    <Grid>
        <Image x:Name="MapImage"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="0,0,0,0"
               Width="1280"
               Height="690"/>
        <Image x:Name="RoutesImage"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="0,0,0,0"
               Width="1280"
               Height="690"/>
        <Image x:Name="AircraftsImage"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="0,0,0,0"
               Width="1280"
               Height="690"/>
        <Button x:Name="PauseButton"
                Content="Stop"
                HorizontalAlignment="Left"
                Margin="1187,10,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="PauseButtonClick"/>
    </Grid>
</Window>
